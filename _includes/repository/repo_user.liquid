<div class="repo p-2 text-center">
  <a href="https://github.com/{{ include.username }}" class="d-flex flex-wrap justify-content-center align-items-start">
    <!-- GitHub Stats -->
    <img
      class="repo-img w-50 p-1"
      alt="{{ include.username }} GitHub Stats"
      src="https://github-readme-stats.vercel.app/api/?username={{ include.username }}&theme={{ site.repo_theme_light }}&show_icons=true"
      data-dark="https://github-readme-stats.vercel.app/api/?username={{ include.username }}&theme={{ site.repo_theme_dark }}&show_icons=true"
    >

    <!-- Most Used Languages -->
    <img
      class="repo-img w-50 p-1"
      alt="{{ include.username }} Most Used Languages"
      src="https://github-readme-stats.vercel.app/api/top-langs/?username={{ include.username }}&layout=compact&theme={{ site.repo_theme_light }}&hide_border=true"
      data-dark="https://github-readme-stats.vercel.app/api/top-langs/?username={{ include.username }}&layout=compact&theme={{ site.repo_theme_dark }}&hide_border=true"
    >
  </a>
</div>
