<div class="repo p-2 text-center">
  <a href="https://github.com/{{ include.username }}">
    <!-- GitHub Stats -->
    <img
      class="repo-img-light w-100"
      alt="{{ include.username }} GitHub Stats"
      src="https://github-readme-stats.vercel.app/api/?username={{ include.username }}&theme={{ site.repo_theme_light }}&show_icons=true"
    >
    <img
      class="repo-img-dark w-100"
      alt="{{ include.username }} GitHub Stats"
      src="https://github-readme-stats.vercel.app/api/?username={{ include.username }}&theme={{ site.repo_theme_dark }}&show_icons=true"
    >
  </a>

  <!-- Streak Stats -->
  <a href="https://github.com/{{ include.username }}">
    <img
      class="repo-img-light w-100 mt-2"
      alt="{{ include.username }} Streak Stats"
      src="https://github-readme-streak-stats.herokuapp.com/?user={{ include.username }}&theme={{ site.repo_theme_light }}&hide_border=true"
    >
    <img
      class="repo-img-dark w-100 mt-2"
      alt="{{ include.username }} Streak Stats"
      src="https://github-readme-streak-stats.herokuapp.com/?user={{ include.username }}&theme={{ site.repo_theme_dark }}&hide_border=true"
    >
  </a>

  <!-- Most Used Languages -->
  <a href="https://github.com/{{ include.username }}">
    <img
      class="repo-img-light w-100 mt-2"
      alt="{{ include.username }} Most Used Languages"
      src="https://github-readme-stats.vercel.app/api/top-langs/?username={{ include.username }}&layout=compact&theme={{ site.repo_theme_light }}&hide_border=true"
    >
    <img
      class="repo-img-dark w-100 mt-2"
      alt="{{ include.username }} Most Used Languages"
      src="https://github-readme-stats.vercel.app/api/top-langs/?username={{ include.username }}&layout=compact&theme={{ site.repo_theme_dark }}&hide_border=true"
    >
  </a>
</div>
