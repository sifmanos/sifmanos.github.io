<div class="repo-stats d-flex flex-wrap justify-content-between w-100">
  <!-- GitHub Stats -->
  <a href="https://github.com/{{ include.username }}" class="w-50 p-2">
    <img
      class="repo-img w-100"
      alt="{{ include.username }} GitHub Stats"
      src="https://github-readme-stats.vercel.app/api/?username={{ include.username }}&theme={{ site.repo_theme_light }}&show_icons=true"
      data-light="https://github-readme-stats.vercel.app/api/?username={{ include.username }}&theme={{ site.repo_theme_light }}&show_icons=true"
      data-dark="https://github-readme-stats.vercel.app/api/?username={{ include.username }}&theme={{ site.repo_theme_dark }}&show_icons=true"
    >
  </a>

  <!-- Most Used Languages -->
  <a href="https://github.com/{{ include.username }}" class="w-50 p-2">
    <img
      class="repo-img w-100"
      alt="{{ include.username }} Most Used Languages"
      src="https://github-readme-stats.vercel.app/api/top-langs/?username={{ include.username }}&layout=compact&theme={{ site.repo_theme_light }}&hide_border=false"
      data-light="https://github-readme-stats.vercel.app/api/top-langs/?username={{ include.username }}&layout=compact&theme={{ site.repo_theme_light }}&hide_border=false"
      data-dark="https://github-readme-stats.vercel.app/api/top-langs/?username={{ include.username }}&layout=compact&theme={{ site.repo_theme_dark }}&hide_border=false"
    >
  </a>
</div>
